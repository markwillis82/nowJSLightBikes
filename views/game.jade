- if (twitterName)

	script(type='text/javascript', src='/javascripts/kinetic.js')
	script(type='text/javascript', src='/javascripts/game.js')
	script(type='text/javascript', src='/javascripts/gameNow.js')
	
	
	h1= title
	p
		strong#state Loading
	
	p#gameId= gameId	
	
	div#Players
		img#p1Img
		span#p1Name
		img#p2Img
		span#p2Name
	
	
	div#waiting
